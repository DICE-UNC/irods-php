html, body {
	background:#3d71b8 url(img/wallpapers/desktop.jpg) no-repeat left top !important;
    font: normal 12px tahoma, arial, verdana, sans-serif;
	margin: 0;
	padding: 0;
	border: 0 none;
	overflow: hidden;
	height: 100%;
}

.z-headerbar{
  color:white;
  font:normal 24px verdana,arial,tahoma;
	/* border-color:#a9bfd3; */
	border-color:#1C3D7A; 
    border-style:solid;
    border-width:0 0 0px 0;
    display: block;
	padding:2px;
    /* background:#d0def0 url(img/header/hd-bg.gif) repeat-x top left; */
    background:#1C3D7A url(img/header/hd-bg.gif) repeat-x top left;
    position:relative;
    zoom:1;
}
.z-headerbar .x-item-disabled .x-btn-icon {
    opacity: .35;
    -moz-opacity: .35;
    filter: alpha(opacity=35);
}
.z-headerbar td {
	vertical-align:middle;
}

.z-headerbar td,.z-headerbar span,.z-headerbar input,.z-headerbar div,.z-headerbar select,.z-headerbar label{
	white-space: nowrap;
	font:normal 18px tahoma, arial, helvetica, sans-serif;
}
.z-headerbar .x-item-disabled {
	color:gray;
	cursor:default;
	opacity:.6;
	-moz-opacity:.6;
	filter:alpha(opacity=60);
}
.z-headerbar .x-item-disabled * {
	color:gray;
	cursor:default;
}
.z-headerbar .x-btn-left{
	background:none;
}
.z-headerbar .x-btn-right{
	background:none;
}
.z-headerbar .x-btn-center{
	background:none;
	padding:0 0;
}
.z-headerbar .x-btn-menu-text-wrap .x-btn-center button{
	color:white;
	padding-right:2px;
}
.ext-gecko .z-headerbar .x-btn-menu-text-wrap .x-btn-center button{
	padding-right:0;
}
.z-headerbar .x-btn-menu-arrow-wrap .x-btn-center button{
	padding:0 2px;
}

.z-headerbar .x-btn-menu-arrow-wrap .x-btn-center button {
    width:12px;
    background:transparent url(img/header/btn-arrow.gif) no-repeat 0 3px;
}
.z-headerbar .x-btn-text-icon .x-btn-menu-arrow-wrap .x-btn-center button {
    width:12px;
    background:transparent url(img/header/btn-arrow.gif) no-repeat 0 3px;
}
.z-headerbar .x-btn-text{
  color:white;
}
.z-headerbar .x-btn-over .x-btn-text{
  color:blue;
}
.z-headerbar .x-btn-over .x-btn-menu-arrow-wrap .x-btn-center button {
	background-position: 0 -47px;
}
.z-headerbar .x-btn-over .x-btn-left{
	background: url(img/header/tb-btn-sprite.gif) no-repeat 0 0;
}
.z-headerbar .x-btn-over .x-btn-right{
	background: url(img/header/tb-btn-sprite.gif) no-repeat 0 -21px;
}
.z-headerbar .x-btn-over .x-btn-center{
	background: url(img/header/tb-btn-sprite.gif) repeat-x 0 -42px;
}

.z-headerbar .x-btn-click .x-btn-left, .z-headerbar .x-btn-pressed .x-btn-left, .z-headerbar .x-btn-menu-active .x-btn-left{
	background: url(img/header/tb-btn-sprite.gif) no-repeat 0 -63px;
}
.z-headerbar .x-btn-click .x-btn-right, .z-headerbar .x-btn-pressed .x-btn-right, .z-headerbar .x-btn-menu-active .x-btn-right{
	background: url(img/header/tb-btn-sprite.gif) no-repeat 0 -84px;
}

.z-headerbar .x-btn-click .x-btn-center, .z-headerbar .x-btn-pressed .x-btn-center, .z-headerbar .x-btn-menu-active .x-btn-center{
	background: url(img/header/tb-btn-sprite.gif) repeat-x 0 -105px;
}

.z-headerbar .x-btn-with-menu .x-btn-center em{
	padding-right:8px;
}

.z-headerbar .ytb-text{
   padding:2px;
}
.z-headerbar .ytb-sep {
	background-image: url(img/header/grid-blue-split.gif);
	background-position: center;
	background-repeat: no-repeat;
	display: block;
	font-size: 1px;
	height: 16px;
	width:4px;
	overflow: hidden;
	cursor:default;
	margin: 0 2px 0;
	border:0;
}
.z-headerbar .ytb-spacer {
    width:2px;
}

/* tips */
.z-tip{position:absolute;top:0;left:0;visibility:hidden;z-index:20000;border:0 none;}
.z-tip .z-tip-close{background-image:url(img/qtip/close.gif);height:15px;float:right;width:15px;margin:0 0 2px 2px;cursor:pointer;display:none;}
.z-tip .z-tip-tc{background:transparent url(img/qtip/tip-yellow.gif) no-repeat 0 -62px;padding-top:3px;overflow:hidden;zoom:1;}
.z-tip .z-tip-tl{background:transparent url(img/qtip/tip-yellow.gif) no-repeat 0 0;padding-left:6px;overflow:hidden;zoom:1;}
.z-tip .z-tip-tr{background:transparent url(img/qtip/tip-yellow.gif) no-repeat right 0;padding-right:6px;overflow:hidden;zoom:1;}
.z-tip .z-tip-bc{background:transparent url(img/qtip/tip-yellow.gif) no-repeat 0 -121px;height:3px;overflow:hidden;}
.z-tip .z-tip-bl{background:transparent url(img/qtip/tip-yellow.gif) no-repeat 0 -59px;padding-left:6px;zoom:1;}
.z-tip .z-tip-br{background:transparent url(img/qtip/tip-yellow.gif) no-repeat right -59px;padding-right:6px;zoom:1;}
.z-tip .z-tip-mc{border:0 none;font:normal 11px tahoma,arial,helvetica,sans-serif;}
.z-tip .z-tip-ml{background:#fff url(img/qtip/tip-yellow.gif) no-repeat 0 -124px;padding-left:6px;zoom:1;}
.z-tip .z-tip-mr{background:transparent url(img/qtip/tip-yellow.gif) no-repeat right -124px;padding-right:6px;zoom:1;}
.ext-ie .z-tip .z-tip-header,.ext-ie .z-tip .z-tip-tc{font-size:0;line-height:0;}
.z-tip .z-tip-header-text{font:bold 11px tahoma,arial,helvetica,sans-serif;padding:0;margin:0 0 2px 0;color:#444;}
.z-tip .z-tip-body{font:normal 11px tahoma,arial,helvetica,sans-serif;margin:0!important;line-height:14px;color:#444;padding:0;}
.z-tip .z-tip-body .loading-indicator{margin:0;}
.z-tip-draggable .z-tip-header,.z-tip-draggable .z-tip-header-text{cursor:move;}

/* accounts */
.z-account-tree-add-icon{
  border: 0 none;
	height: 48px !important;
	margin: 0;
	padding: 0;
	vertical-align: top;
	width: 48px !important;
	background-position:center;
  background-repeat: no-repeat;
  background-image: url(img/account/icon-network-add-48px.gif) !important;
} 

.z-account-new{
  font:normal 14px tahoma,arial,helvetica,sans-serif;
	padding:2px;
}

.z-account-mask {opacity: 1; -moz-opacity: 1; filter: none; background: white;}